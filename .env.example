# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: Anam AI for video avatar mode
ANAM_API_KEY=your-anam-api-key

# Optional: Upstash Redis for persistent lead storage
# Without these, leads are stored in-memory (lost on restart)
KV_REST_API_URL=https://your-upstash-url.upstash.io
KV_REST_API_TOKEN=your-upstash-token

# Optional: Webhook URLs for lead forwarding
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/lead
MAKE_WEBHOOK_URL=https://hook.eu2.make.com/your-webhook-id

# Optional: Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T.../B.../xxx
